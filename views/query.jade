.navbar.navbar-default
  .container-fluid
    .navbar-header
      a(class="navbar-brand" href="/") Out House

    if (!user)
      ul(class="nav navbar-nav")
        li
          a(href="/login") Login
        li
          a(href="/register") Register

    if (user)
      ul(class="nav navbar-nav")
        li
          a(href="/profile") Profile
        li
          a(href="/logout") Logout
      p(class="navbar-text navbar-right") Signed in as #{user.username}

.container
    h1
        a(href='/')= title

    .row
        .col-md-3
            label Origin
        .col-md-3
            label Destination
        .col-md-3
            label Radius
        .col-md-3
            label Transportation Method

    .row
        .col-md-3
            .search-param
                #address= address
        .col-md-3
            .search-param
                #destination N/A
        .col-md-3
            .search-param
                #radius= radius
        .col-md-3
            .search-param
                #method= method
    .row
        .map
            label Bathrooms
            #map-canvas

    .row
        .col-md-6
            .map
                label Directions
                #map-directions
        .col-md-6
            .directions-panel
                #directions-panel

script(src="https://maps.googleapis.com/maps/api/js?libraries=places")
script(src="/js/googlemaps.js")
