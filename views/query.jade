.navbar.navbar-default
  .container
    .navbar-header
      a(class="navbar-brand" href="/") Out House

    if (!user)
      ul(class="nav navbar-nav")
        li
          a(href="/login") Login
        li
          a(href="/register") Register

    if (user)
      ul(class="nav navbar-nav")
        li
          a(href="/profile") Profile
        li
          a(href="/logout") Logout
      p(class="navbar-text navbar-right") Signed in as #{user.username}

.container

    .info
      .row
          .col-sm-3
              label Origin
          .col-sm-3
              label Destination
          .col-sm-3
              label Radius
          .col-sm-3
              label Transportation Method

      .row
          .col-sm-3
              .search-param
                  #address= address
          .col-sm-3
              .search-param
                  #destination N/A
          .col-sm-3
              .search-param
                  #radius= radius
          .col-sm-3
              .search-param
                  #method= method
    .row
      .col-md-12
        .map
            h2(class='map-title')
              .num_bathrooms
              <span> bathrooms were found:</span>
            #map-canvas

    .row
      .direction
        h2
          <span>Directions to </span>
          .direction-dest
          <span>:</span>
        .col-md-6
            .directions-map
                #map-directions
        .col-md-6
            .directions-panel
                #directions-panel

    if (user)
      .col-md-4.col-md-offset-4
        .row
          #check-in
            form(action='/checkin', method='post', class='form-checkin')
              .form-group
                input(type='hidden', name='bathroom', id='form-bathroom-name', value='')
                input.form-control(type='submit', value='Check-In', class='btn btn-primary btn-check-in')

script(src="https://maps.googleapis.com/maps/api/js?libraries=places")
script(src="/js/googlemaps.js")
